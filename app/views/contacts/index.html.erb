<h1>Contacts</h1>

<%= link_to 'New Contact', new_contact_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td>
          <%= link_to 'Show', contact_path(contact), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-warning' %>
          <%= link_to 'Delete', contact_path(contact), method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
