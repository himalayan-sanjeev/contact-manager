<div class="container-lg mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
      <h1 class="h3 mb-0">Contact Details</h1>
    </div>
    <div class="card-body">
      <p class="mb-3">
        <strong>Name:</strong> <span class="text-muted"><%= @contact.name %></span>
      </p>
      <p class="mb-3">
        <strong>Phone:</strong> <span class="text-muted"><%= @contact.phone %></span>
      </p>
      <p class="mb-4">
        <strong>Email:</strong> <span class="text-muted"><%= @contact.email %></span>
      </p>

      <%= link_to 'Edit', edit_contact_path(@contact), class: 'btn btn-warning me-2' %>
      <%= link_to 'Back', contacts_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
